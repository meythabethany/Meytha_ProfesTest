@model IEnumerable<Meytha_ProfesTest.Models.SalesOrder>
@{
    ViewBag.Title = "Sales Order";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sales Order</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f7;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .header {
            background-color: #003f7f;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            color: white;
            text-align: center;
            font-size: 1.5em;
            font-weight: bold;
        }

        .form-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
        }

        .form-container input[type="text"],
        .form-container input[type="date"] {
            padding: 8px;
            width: 40%;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-container button {
            background-color: #003f7f;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }

        .form-container button:hover {
            background-color: #0056a3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th,
        table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        table th {
            background-color: #003f7f;
            color: white;
        }

        .action-icons a {
            margin: 0 5px;
            color: #003f7f;
            text-decoration: none;
        }

        .action-icons a:hover {
            color: #0056a3;
        }

        .add-button {
            display: inline-block;
            background-color: #e91e63;
            color: white;
            padding: 10px 20px;
            text-align: center;
            border-radius: 4px;
            margin-top: 20px;
            text-decoration: none;
        }

        .add-button:hover {
            background-color: #d81b60;
        }

        .export-button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .export-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            Sales Order
        </div>

        <div class="form-container">
            <form method="get">
                <input type="text" name="keyword" placeholder="Enter keywords..." />
                <input type="date" name="orderDate" />
                <button type="submit">Search</button>
            </form>
        </div>

        <div>
            <a href="@Url.Action("AddEdit")" class="add-button">Add New Data</a>
            <button class="export-button">Export to Excel</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Action</th>
                    <th>Sales Order</th>
                    <th>Order Date</th>
                    <th>Customer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td class="action-icons">
                            <a href="@Url.Action("Add", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fas fa-trash"></i></a>
                        </td>
                        <td>@item.SalesOrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>@item.Customer</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>